<html>
    <head>
        <title>Marinette Blog</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <script src="https://code.jquery.com/jquery-git2.min.js"></script>
    </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">
                        <i id="brandImg" class="fa fa-connectdevelop" aria-hidden="true"></i>
                    </a>
                    <a class="navbar-brand" href="/">Marinette</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class=""><a href="/">Home <span class="sr-only">(current)</span></a></li>
                        <li><a href="/blogs">Blog</a></li>
                        <li><a href="/pictures">Picture</a></li>
                        <li><a href="/algorithms">Algorithms</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">FUNNY GAMES<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">RGB GUESSING GAME</a></li>
                                <li><a href="#">PATPAT</a></li>
                                <li><a href="#">Comming Soon!</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <% if(!currentUser){ %>
                            <li><a href="/login">Login</a></li>
                            <li><a href="/register">Sign Up</a></li>
                        <% } else {%>
                            <li><a href="#"><i class="fa fa-user-circle" aria-hidden="true"></i> <%= currentUser.username%></a></li>
                            <li><a href="/logout">Logout</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
        
        <div class="container">
            <% if(error && error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if(success && success.length > 0){ %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
        </div>
        
        <script type="text/javascript" src="/javascript/header.js"></script>
