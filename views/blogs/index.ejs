<% include ../partials/header.ejs %>
<link rel="stylesheet" href="stylesheets/blogs/index.css">

<header class="jumbotron">
        <div class="container text-center">
            <h1>Welcome To Marinette Blog!</h1>
        </div>
</header>

<div class="container"> 
    <% tags.forEach(function(tag){ %>
        <a href=<%= "#"+tag.name %> class="btn btn-info"><%= tag.name %></a>
    <% }) %>
    <div class="container">
    <% tags.forEach(function(tag){ %>
        <h2 id=<%= tag.name %> style="color:#FA8072"><i class="fa fa-tag" aria-hidden="true"></i><strong> <%= tag.name %> </strong></h2>
        <div class="ui top  attached segment">
        <div class="ui divided items">
        <% tag.blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                    <img src="<%= blog.image %>" >
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id %>"><%=blog.title%></a>
                    <div class="meta">
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- blog.description.substring(0, 100) %>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic teal button" href="/blogs/<%= blog._id %>">
                            Read More
                            <i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
        </div>
        </div>
    <% }) %>
    </div>
</div>

<% include ../partials/footer.ejs %>