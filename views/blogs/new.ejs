<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new blog database:</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[filename]" placeholder="filename">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" placeholder="title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" placeholder="image url">
                </div>
                <div class="form-group">
                    <select class="form-control" name="blog[tag]"> 
                        <option value="Daily" selected>Daily</option> 
                        <option value="Peking-University" selected>Peking University</option> 
                        <option value="UTD">UTD</option>
                        <option value="Language">Language</option>
                        <option value="Web-Development">Web Development</option>
                        <option value="Travel-Notes">Travel Notes</option>
                        <option value="Friends">Friends</option>
                        <option value="Algorithms">Algorithms</option>
                        <option value="Others">Others</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" name="blog[description]" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/blogs">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>