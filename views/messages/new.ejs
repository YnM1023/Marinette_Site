<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Message to <%= algorithm.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/algorithms/<%= algorithm._id %>/messages" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="message[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/algorithms">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
