<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Your Profile</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/profile/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <h3>Avatar URL</h3>
                    <input class="form-control" type="text" name="avatar" value="<%= currentUser.avatar %>">
                </div>
                <div class="form-group">
                    <h3>Gender</h3>
                    <select class="form-control" name="gender"> 
                        <option value="secret" selected>Secret</option> 
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <h3>What's Up</h3>
                    <textarea class="form-control" rows="5" name="info" ><%= currentUser.info %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/profile">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>