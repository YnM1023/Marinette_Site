<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Picture</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/pictures" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <select class="form-control" name="tag"> 
                        <option value="ACG" selected>ACG</option> 
                        <option value="Photo-Person">Photo-Person</option>
                        <option value="Photo-Scenery">Photo-Scenery</option>
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" name="description" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="copyright" placeholder="copyright">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/pictures">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>


