<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= picture.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/pictures/<%= picture._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="picture[name]" value="<%= picture.name %>">
                </div>
                <div class="form-group">
                    <!--<input class="form-control" type="text" name="tag" placeholder="tag">-->
                    <select class="form-control" name="picture[tag]"> 
                        <option value="ACG" selected>ACG</option> 
                        <option value="Photo-Person">Photo-Person</option>
                        <option value="Photo-Scenery">Photo-Scenery</option>
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="picture[image]" value="<%= picture.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" name="picture[description]" ><%= picture.description %></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="picture[copyright]" value="<%= picture.copyright %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/pictures">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>